<resources>

    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar" />

    <style name="search_btn">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn035</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="custom_edittext" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#bbbbbb</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="map_search_edittext" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/map_search_edittext</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#bbbbbb</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

</resources>